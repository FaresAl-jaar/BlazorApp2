    <script>
        // Download-Funktion für Blob-basierte Downloads (stabiler für große Dateien)
        window.downloadFileFromBytes = function (fileName, byteArray) {
            const blob = new Blob([new Uint8Array(byteArray)], { type: 'application/octet-stream' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = fileName;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
        };
    </script>
</body>

