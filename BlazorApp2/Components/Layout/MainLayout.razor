@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page @(isDarkMode ? "dark-mode" : "")">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <span></span>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-sm @(isDarkMode ? "btn-light" : "btn-dark")" @onclick="ToggleDarkMode">
                    <i class="bi @(isDarkMode ? "bi-sun-fill" : "bi-moon-fill")"></i>
                    @(isDarkMode ? "Light" : "Dark")
                </button>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool isDarkMode = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var savedMode = await JS.InvokeAsync<string>("localStorage.getItem", "darkMode");
            isDarkMode = savedMode == "true";
            StateHasChanged();
        }
    }

    private async Task ToggleDarkMode()
    {
        isDarkMode = !isDarkMode;
        await JS.InvokeVoidAsync("localStorage.setItem", "darkMode", isDarkMode.ToString().ToLower());
    }
}
